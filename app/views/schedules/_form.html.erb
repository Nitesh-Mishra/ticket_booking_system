<%= form_for(@schedule) do |f| %>
  <% if @schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% @schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :team_name1 %><br>
    <% team_array = Team.all.map { |team| [team.name] } %>
    <%= f.select :team_name1,  team_array , :include_blank => "Select Team 1"%>
    
  </div>
  <div class="field">
    <%= f.label :team_name2 %><br>
    <% team_array = Team.all.map { |team| [team.name] } %>
    <%= f.select :team_name2,  team_array , :include_blank => "Select Team 2"%>
    
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.datetime_select :time %>
  </div>
  <div class="field">
    <%= f.label :no_of_seats %><br>
    <%= f.text_field :no_of_seats %>
  </div>
  <%= f.hidden_field :booked_seats %>
  <%= f.hidden_field :available_seats %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  $(document).ready( function ()
{
  
  $('#schedule_no_of_seats').focusout(function()
  {
    $('#schedule_available_seats').val($('#schedule_no_of_seats').val());   
  });
});
</script>