<p id="notice"><%= notice %></p>

<h1>Listing Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Team id1</th>
      <th>Team id2</th>
      <th>Date</th>
      <th>Time</th>
      <th>No of seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.team_id1 %></td>
        <td><%= schedule.team_id2 %></td>
        <td><%= schedule.date %></td>
        <td><%= schedule.time %></td>
        <td><%= schedule.no_of_seats %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

